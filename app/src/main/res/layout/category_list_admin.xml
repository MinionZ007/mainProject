<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_list_category">

    <TextView
        android:id="@+id/categorytext"
        android:text="Select Your Category Of Shop"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/Med_btn"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_round2"
        android:text="PHARMACY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Fur_btn" />



    <Button
        android:id="@+id/Res_btn"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginTop="60dp"
        android:text="Restaurant"
        android:background="@drawable/edit_round2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categorytext"
         />

    <Button
        android:id="@+id/Fur_btn"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_round2"
        android:text="Furniture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Res_btn" />

    <Button
        android:id="@+id/Fashion_btn"
        android:text="FASHION"
        app:layout_constraintTop_toBottomOf="@id/Med_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_round2"
        android:layout_width="130dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/grocery_btn"
        android:text="GROCERY"
        app:layout_constraintTop_toBottomOf="@id/Fashion_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_round2"
        android:layout_width="130dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/shoe_btn"
        android:text="SHOES"
        app:layout_constraintTop_toBottomOf="@id/grocery_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_round2"
        android:layout_width="130dp"
        android:layout_height="50dp" />
</android.support.constraint.ConstraintLayout>