<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".furniturecommon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="106dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gcimg"
            android:layout_width="151dp"
            android:layout_height="match_parent"
            android:src="@drawable/furniture_icon" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gcname"
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="166dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:fontFamily="@font/hmd"
                android:padding="15dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gccontact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="164dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:fontFamily="@font/nasa"
                android:padding="15dp"
                android:paddingLeft="15dp"
                android:text="Edathala Junction "
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold" />



        </RelativeLayout>
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/callbtn"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/edit_round2"
            android:src="@drawable/ic_local_phone_white_24dp" />


        <ImageButton
            android:id="@+id/directionbtn"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/edit_round2"
            android:src="@drawable/ic_directions_black_24dp" />

    </LinearLayout>

        <TextView
            android:layout_width="345dp"
            android:layout_height="40dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:background="@drawable/logout_round"
            android:fontFamily="@font/nasa"
            android:text="AR Feature Available on Selected Furnitures"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:clipToPadding="false"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                app:cardBackgroundColor="@color/ash"
                app:cardMaxElevation="10dp"
                app:cardCornerRadius="7dp"
                android:layout_height="85dp"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:id="@+id/rehma_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Office Chair"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4400/-"
                        android:textColor="@color/red" />


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                app:cardBackgroundColor="@color/ash"
                app:cardMaxElevation="10dp"
                app:cardCornerRadius="7dp"
                android:layout_height="85dp"
                android:layout_margin="10dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dinning Table"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs 30000/-"
                        android:textColor="@color/red"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:clipToPadding="false"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                app:cardBackgroundColor="@color/ash"
                app:cardMaxElevation="10dp"
                app:cardCornerRadius="7dp"
                android:layout_height="85dp"
                android:layout_margin="10dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cushion"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1700/-"
                        android:textColor="@color/red"
                        />


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                app:cardBackgroundColor="@color/ash"
                app:cardMaxElevation="10dp"
                app:cardCornerRadius="7dp"
                android:layout_height="85dp"
                android:layout_margin="10dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Double Coat Bed"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs 12000/-"
                        android:textColor="@color/red"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>



</ScrollView>