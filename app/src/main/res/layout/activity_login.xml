<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bgd"
    tools:context=".loginActivity">

    <EditText
        android:id="@+id/userid"
        android:layout_width="325dp"
        android:layout_height="50dp"

        android:layout_marginTop="160dp"
        android:background="@drawable/edit_round"
        android:drawableStart="@drawable/ic_person_white_24dp"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:paddingLeft="5dp"
        android:hint="Enter User Id"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/userpswd"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_round"
        android:drawablePadding="5dp"
        android:hint="Enter User Password"
        android:paddingLeft="5dp"
        android:drawableStart="@drawable/ic_lock_white_24dp"
        android:drawableLeft="@drawable/ic_lock_white_24dp"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userid" />

    <CheckBox
        android:id="@+id/rem_chk_box"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginLeft="90dp"
        android:outlineAmbientShadowColor="@color/white"
        android:background="@drawable/location_round"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userpswd" />

    <TextView
        android:id="@+id/rem_me"
        android:layout_width="206dp"
        android:layout_height="27dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:text="Remember Me"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/rem_chk_box"
        app:layout_constraintTop_toBottomOf="@id/userpswd" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="315dp"
        android:layout_height="54dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/edit_round2"
        android:text="LOGIN"
        android:fontFamily="@font/nasa"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userpswd" />

    <Button
        android:id="@+id/signup_btn"
        app:layout_constraintTop_toBottomOf="@id/login_btn"
        android:layout_marginTop="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="SIGNUP"
        android:fontFamily="@font/nasa"
        android:textSize="20sp"
        android:background="@drawable/edit_round"
        android:layout_width="315dp"
        android:layout_height="54dp" />

    <TextView
        android:id="@+id/admin"
        android:text="Admin Login"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/signup_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />





</android.support.constraint.ConstraintLayout>